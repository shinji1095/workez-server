{
  "base_url": "${BASE_URL}",
  "cases": [
    {
      "name": "create_user",
      "method": "POST",
      "path": "/users",
      "headers": {
        "Authorization": "Bearer ${USER_JWT}"
      },
      "payload": "e2e/payloads/create_user.json",
      "expect_status": 201
    },
    {
      "name": "list_users",
      "method": "GET",
      "path": "/users?page=1&page_size=10",
      "headers": {
        "Authorization": "Bearer ${ADMIN_JWT}"
      },
      "expect_status": 200
    },
    {
      "name": "create_device",
      "method": "POST",
      "path": "/devices",
      "headers": {
        "Authorization": "Bearer ${ADMIN_JWT}"
      },
      "payload": "e2e/payloads/create_device.json",
      "expect_status": 201
    },
    {
      "name": "harvest_add",
      "method": "POST",
      "path": "/harvest/amount/add",
      "headers": {
        "Authorization": "Bearer ${DEVICE_JWT}"
      },
      "payload": "e2e/payloads/harvest_add.json",
      "expect_status": 201
    },
    {
      "name": "harvest_daily",
      "method": "GET",
      "path": "/harvest/amount/daily?page=1&page_size=10",
      "headers": {
        "Authorization": "Bearer ${USER_JWT}"
      },
      "expect_status": 200
    },
    {
      "name": "defects_add",
      "method": "POST",
      "path": "/defects/amount/add",
      "headers": {
        "Authorization": "Bearer ${DEVICE_JWT}"
      },
      "payload": "e2e/payloads/defects_add.json",
      "expect_status": 201
    },
    {
      "name": "defects_weekly",
      "method": "GET",
      "path": "/defects/amount/weekly?page=1&page_size=10",
      "headers": {
        "Authorization": "Bearer ${USER_JWT}"
      },
      "expect_status": 200
    },
    {
      "name": "revenue_monthly",
      "method": "GET",
      "path": "/analytics/revenue/monthly?page=1&page_size=10",
      "headers": {
        "Authorization": "Bearer ${ADMIN_JWT}"
      },
      "expect_status": 200
    }
  ]
}